# VA Azure OpenAI Configuration
# Copy this file to .env and fill in your actual values

# API Endpoints
VA_OPENAI_BASE_URL=https://your-resource.openai.azure.com/openai/v1/chat/completions/
VA_OPENAI_RESPONSES_URL=https://your-resource.openai.azure.com/openai/v1/responses/

# API Keys (keep these secret!)
VA_OPENAI_API_KEY=your-primary-api-key-here
VA_OPENAI_API_KEY_2=your-secondary-api-key-here

# API Version
VA_OPENAI_API_VERSION=2025-01-01-preview

# Model Configuration
VA_GPT5_DEPLOYMENT=gpt-5
VA_GPT5_MODEL_NAME=gpt-5

# Computer Use Configuration (for computer-use-preview model)
VA_COMPUTER_USE_DEPLOYMENT=computer-use-preview

# Display Settings (adjust to your screen resolution)
DISPLAY_WIDTH=1920
DISPLAY_HEIGHT=1080

# Automation Settings
MAX_ITERATIONS=10
