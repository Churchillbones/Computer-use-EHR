# VA Azure OpenAI Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# VERIFIED WORKING CONFIGURATION (2025-11-26)
# =============================================================================

# API Base URL (DO NOT include endpoint paths - just the base)
# Chat Completions: {BASE_URL}/chat/completions
# Responses API:    {BASE_URL}/responses
VA_OPENAI_BASE_URL=https://spd-dev-openai-std-apim.azure-api.us/openai/v1

# API Keys (keep these secret!)
# Get from VA Azure APIM subscription
VA_OPENAI_API_KEY=your-api-key-here
VA_OPENAI_API_KEY_2=your-secondary-api-key-here

# API Version (not required for VA APIM - they handle versioning internally)
VA_OPENAI_API_VERSION=2025-01-01-preview

# Model Configuration
# Available models: gpt-4o, gpt-4o-mini, gpt-5 (check your APIM subscription)
VA_GPT5_DEPLOYMENT=gpt-4o
VA_GPT5_MODEL_NAME=gpt-4o

# Computer Use Configuration
# NOTE: computer-use-preview model may not be deployed yet on VA APIM
VA_COMPUTER_USE_DEPLOYMENT=computer-use-preview

# Display Settings (adjust to your screen resolution)
DISPLAY_WIDTH=1920
DISPLAY_HEIGHT=1080

# Automation Settings
MAX_ITERATIONS=10
